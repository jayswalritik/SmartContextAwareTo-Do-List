<resources>

    <!-- Base Text Appearance -->
    <style name="MyTextView">
        <item name="android:textColor">@color/black</item> <!-- updated from black -->
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <!-- Hint Text Style -->
    <style name="MyInputText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Tab Layout -->
    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@android:color/transparent</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/textinputedittextstrokecolor</item>
        <item name="boxStrokeWidth">2dp</item>

        <item name="boxStrokeErrorColor">@android:color/holo_red_dark</item>
        <item name="errorIconDrawable">@null</item>

        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>

        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="WhiteRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">32dp</item>
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Myratingstar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstarselector</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>




</resources>
